{{#if addNewReview}}
  <div class="form-style">
    <h2>Your Review</h2>
      <div>
        <form>
          <div class="form-group">
            <label for="author">Name:</label>
            {{input value=author class="author"}}
          </div>

          <div class="form-group">
            <label for="rating">Your Rating:</label>
            {{input value=number min=0 max=5 class="rating"}}
          </div>

          <div class="form-group">
            <label for="body">Review:</label>
            {{textarea value=body class="body"}}
          </div>

          <button class="post-review" {{action 'saveReview1'}}>Post</button>
        </form>
      </div>
  </div>
{{else}}
  <button class="post-review" {{action 'reviewFormShow'}}>Add Review</button>
{{/if}}
