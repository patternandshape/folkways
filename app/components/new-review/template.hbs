{{#if addNewReview}}
  <div class="form-style">
    <h2>Your Review</h2>
      <div>
        <form>

          <div class="form-group">
            <label for="first-name">First name:</label>
            {{input value=first-name class="first-name"}}
          </div>

          <div class="form-group">
            <label for="last-name"> Surname:</label>
            {{input value=last-name class="last-name"}}
          </div>

          <div class="form-group">
            <label for="date">Date:</label>
            {{input type="date" name="todays-date"}}
          </div>

          <div class="form-group">
            <label for="username">Rating:</label>
            {{input type="number" min=1 max=10 value=rating}}
          </div>

          <div class="form-group">
            <label for="body">Review:</label>
            {{textarea value=body class="body"}}
          </div>

          <button class="post-review" {{action 'saveReview1' review}}>Post</button>
        </form>
      </div>
  </div>
{{else}}
  <button class="post-review" {{action 'reviewFormShow'}}>Add Review</button>
{{/if}}
