{{#if addNewReview}}
    <h2>YOUR REVIEW</h2>
    <form class ="form-style review-form">

      <label for="firstName">First name:</label>
      {{input value=firstName}}

      <label for="lastName"> Surname:</label>
      {{input value=lastName}}

      <label for="date">Date:</label>
      {{input type="date"}}

      <label for="username">Rating (1-10pts):</label>
      {{input type="number" min=1 max=10 value=rating}}

      <label for="body">Review:</label>
      {{textarea value=body}}

      <button class="post-review" {{action 'saveReview1' review}}>Post</button>

    </form>
  {{else}}
  <button class="post-review" {{action 'reviewFormShow'}}>Add Review</button>
  {{/if}}
