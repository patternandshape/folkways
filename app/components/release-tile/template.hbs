<div class="release">
    <p class="release-name">
      {{#link-to 'release' release.id}}{{release.title}}{{/link-to}}
    </p>

    {{#link-to 'release' release.id}}

    <div class="thumbnail" style="background-image: url({{release.image}});"></div>

    {{/link-to}}
    <p class="artist">{{release.artist}}<span class="many-comments">{{release-popularity release}}</span><button class="index-add-button" {{action 'addToCollection' release}}> + </button><br>{{release.year}}</p>
</div>
