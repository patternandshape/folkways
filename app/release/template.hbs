<div class="release-page">
  <p class="release-page-title">
    <h2 class="release-artist">{{model.artist}}</h2>
    <h3>{{model.title}}</h3>
  </p>
  <img class="lg-image" src={{model.image}}>
  <p><b>{{model.year}}</b><button class="add-button" {{action 'addToCollection' release}}> + </button>
  </p>
  <p class="description">
    {{model.description}}
  </p>

  <div class="new-review">
    {{new-review saveReview2="saveReview3" release=model}}
  </div>
  <ul>
    {{#each model.reviews as |review|}}
      <h4>Review from {{review.author}}</h4>
      <p>{{review.date}}</p>
      <p>{{review.rating}}</p>
      <p>{{review.body}}</p>
    {{/each}}
  </ul>
</div>
